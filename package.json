{
  "name": "@traittech/actiongate",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "description": "The app provides a convenient REST API to submit new transactions to the TRAIT blockchain.",
  "homepage": "https://trait.tech",
  "author": "TRAIT Team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traittech/actiongate.git"
  },
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "build": "npx tsc",
    "start": "npx tsc && node dist/app.js",
    "dev": "nodemon src/app.ts",
    "test": "jest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier": "prettier --write .",
    "generate:meta": "tsx node_modules/@polkadot/typegen/scripts/polkadot-types-from-chain.mjs --endpoint wss://rpc-2.trait.tech --output ./src/interfaces"
  },
  "dependencies": {
    "@polkadot/api": "^15.0.2",
    "@polkadot/keyring": "^13.2.3",
    "@polkadot/rpc-provider": "^15.0.2",
    "@substrate/txwrapper-polkadot": "^7.5.3",
    "@traittech/trait-keyless": "^0.1.4",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "swagger-ui-express": "5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@polkadot/typegen": "^15.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "packageManager": "yarn@4.5.3"
}
