{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
